<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixty_five_dp"
    app:cardCornerRadius="@dimen/fifteen_dp"
    android:layout_marginBottom="@dimen/five_dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMV"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:src="@drawable/music_icon"
        app:shapeAppearanceOverlay="@style/curved"
        android:layout_marginStart="@dimen/five_dp"
        android:layout_marginVertical="@dimen/five_dp"/>

    <TextView
        android:id="@+id/songNameMV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/thirty_five_dp"
        android:layout_toStartOf="@id/songDuration"
        android:layout_toEndOf="@id/imageMV"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/song_name"
        android:textColor="?colorOnPrimary"
        android:layout_marginStart="@dimen/seventy_dp"
        android:layout_marginEnd="@dimen/fifty_dp"/>

    <TextView
        android:id="@+id/songAlbumMV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_five_dp"
        android:text="@string/song_name"
        android:layout_toEndOf="@id/imageMV"
        android:layout_toStartOf="@id/songDuration"
        android:layout_marginTop="@dimen/thirty_dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginStart="@dimen/seventy_dp"
        android:layout_marginEnd="@dimen/fifty_dp"/>

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="match_parent"
        android:text="@string/start_tv"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_gravity="end"
        android:textColor="?colorOnPrimary"
        android:layout_marginHorizontal="@dimen/five_dp"/>


</com.google.android.material.card.MaterialCardView>